<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        color: white;
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden;
        background-color: #000;
    }

    .bg-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        background-color: #000;
    }

        .bg-video video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .bg-video:-webkit-full-screen {
            display: none !important;
        }

    @@media (min-aspect-ratio: 16/9) {
        .bg-video video

    {
        width: 100%;
        height: auto;
    }

    }

    @@media (max-aspect-ratio: 16/9) {
        .bg-video video

    {
        width: auto;
        height: 100%;
    }

    }

    section {
        padding: 60px 20px;
        text-align: center;
        backdrop-filter: blur(5px);
        background: rgba(0, 0, 0, 0.5);
        border-radius: 15px;
        margin: 40px;
    }

    h2 {
        font-size: 2em;
        margin-bottom: 20px;
        font-weight: 700;
    }

    .card-container {
        display: block;
        align-items: center;
    }

    .info-card {
        position: relative;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 20px;
        margin: 20px;
        width: 43%;
        transition: transform 0.3s ease, background 0.3s ease;
    }

        .info-card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.2);
        }

        .left-card {
            left: 5;
        }

        .right-card {
            left: 50%;
        }

    .footer-section {
        background: rgba(0, 0, 0, 0.8);
        padding: 40px 20px;
        text-align: center;
    }

    .footer-content {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        gap: 20px;
    }

    .footer-column h3 {
        margin-bottom: 10px;
    }

    .social-icons a {
        margin: 0 10px;
        text-decoration: none;
        font-size: 1.5em;
        color: white;
        transition: opacity 0.3s;
    }

        .social-icons a:hover {
            opacity: 0.7;
        }

    .footer-bottom {
        margin-top: 20px;
        font-size: 0.9em;
    }
</style>

