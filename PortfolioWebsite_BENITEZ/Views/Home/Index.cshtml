            font-weight: 700;
            margin-bottom: 40px;
            text-align: left;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            padding: 0 10px;
        }

    .roles-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 25px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .role-item {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        overflow: hidden;
        width: 280px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

        .role-item:hover {
            transform: translateY(-10px) scale(1.03);
            background: rgba(167, 95, 255, 0.3);
            box-shadow: 0 6px 20px rgba(167, 95, 255, 0.4);
        }

    .role-item-image {
        width: 100%;
        height: 200px;
        background-color: #e0f2f7;
        overflow: hidden;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .role-item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Key for fixing image fit */
            display: block;
        }

    .role-item-details {
        padding: 20px;
        text-align: left;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
    }

        .role-item-details h3 {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: #d0aaff;
            line-height: 1.3;
        }

        .role-item-details p {
            font-size: 0.9rem;
            line-height: 1.4;
            color: #ccc;
        }

    @@media (max-width: 1200px) {
        .role-item {
            width: 250px;
        }
    }

    @@media (max-width: 992px) {
        .role-item {
            width: 45%;
            max-width: 350px;
        }

        .roles-grid {
            gap: 20px;
        }
    }

    @@media (max-width: 768px) {
        .roles-section h2 {
            text-align: center;
        }

        .role-item {
            width: 80%;
            max-width: 400px;
        }
    }

    @@media (max-width: 480px) {
        .roles-section h2 {
            font-size: 2rem;
            margin-bottom: 30px;
        }

        .role-item-image {
            height: 180px;
        }
    }

    .video-section {
        background: transparent;
        text-align: center;
        padding: 80px 20px;
    }

        .video-section h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: #d0aaff;
        }

    .video-description {
        font-size: 1rem;
        color: #ccc;
        max-width: 800px;
        margin: 0 auto 40px;
        line-height: 1.6;
    }

    .video-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .video-container video {
            width: 80%;
            max-width: 900px;
            border-radius: 20px;
            box-shadow: 0 0 30px rgba(167, 95, 255, 0.4);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .video-container video:hover {
                transform: scale(1.02);
                box-shadow: 0 0 40px rgba(208, 170, 255, 0.5);
            }

    @@media (max-width: 768px) {
        .video-container video {
            width: 95%;
        }

        .video-section h2 {
            font-size: 2rem;
        }

        .video-description {
            font-size: 0.95rem;
        }
    }


    .footer-section {
        background-color: #0d0d0d;
        color: #aaa;
        padding: 40px 0 20px;
        text-align: center;
    }

    .footer-content {
        display: flex;
        justify-content: space-around;
        max-width: 1200px;
        margin: 0 auto 30px;
        padding: 0 20px;
    }

    .footer-column h3 {
        color: #fff;
        margin-bottom: 15px;
    }

    .footer-column a {
        color: #d1b3ff;
        text-decoration: none;
    }

    .footer-bottom {
        border-top: 1px solid #333;
        padding-top: 20px;
        font-size: 0.9em;
    }

    .social-icons a {
        margin: 0 10px;
        font-size: 1.5em;
    }
</style>


