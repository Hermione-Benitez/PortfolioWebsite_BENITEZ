@{
    ViewData["Title"] = "Home Page";
}

<style>
    html, body {
        background-image: url('images/bg.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow-x: hidden;
    }

    .Parallax {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
    }

    #text {
        position: absolute;
        font-size: 10vw;
        color: #ffff;
        font-family: 'Arial';
        font-weight: 900;
        white-space: nowrap;
    }

    .Parallax img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        object-fit: cover;
    }

    .title {

        text-align: center;
        padding: 60px 20px 70px;
        color: #fff;
        width: 100%;
        background-color: #6300a5;
    }

        .title p {
            font-size: 1.1em;
            margin-bottom: 5px;
        }

    #Hi {
        font-size: 3vw;
        margin-bottom: 5px;
    }
    .text-changer {
        font-size: 3vw;
        font-weight: 700;
        margin: 15px;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }
        .aspiringroles {
            height: 2em;
            overflow: hidden;
            position: relative;
            margin-left: 15px;
            color: #d1b3ff;
        }
        .role{
            display: block;
            height: 100%;
            font-size: 1.1em;
            padding-left: 6px;
            color: #bc5bff;
            animation: role-change 10s infinite;
        }
    @@keyframes role-change {
        0% {transform: translateY(0);}
        20% {transform: translateY(0);}
        25% {transform: translateY(-100%);}
        40% {transform: translateY(-100%);}
        45% {transform: translateY(-200%);}
        60% {transform: translateY(-200%);}
        65% {transform: translateY(-300%);}
        80% {transform: translateY(-300%);}
        85% {transform: translateY(-400%);}
        100% {transform: translateY(-400%);}
    }



    .hover-section {
        color: #fff;
        padding: 100px 0 150px;
        min-height: 80vh;
        position: relative;
        z-index: 10; 
        text-align: center;
        background-color: white;
    }

        .hover-section h2 {
            font-size: 3em;
            color: #6300a5;
            margin-bottom: 40px;
        }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        max-width: 1500px;
        margin: 0 auto;
    }

    .info-card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 25px;
        color: #6300a5;
        margin: 10px;
        width: 300px;
        text-align: left;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    }

        .info-card:hover {
            transform: translateY(-10px) scale(1.05);
            background: rgba(167, 95, 255, 0.3);
            box-shadow: 0 6px 20px rgba(167, 95, 255, 0.4);
        }

        .info-card h3 {
            font-size: 1.3rem;
            color: #4e04a9;
            margin-bottom: 10px;
        }

        .info-card p {
            font-size: 0.95rem;
            line-height: 1.5;
        }

    .Skill-section {
        background-color: transparent;
    }
        .Skill-section h2 {
            font-size: 5vw;
            text-align: center;
            color: #fff;
            padding: 60px 20px 40px;
            font-size: 3em;
        }

    .Skills {
        height: 60vh;
        gap: 1em;
        display: flex;
        padding-top: 5vh;
        align-items: flex-start;
        overflow-x: auto;
        justify-content: flex-start;
    }

    .skillgroup {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1em;
        animation: spin 15s infinite linear;
    }

        .Skills::-webkit-scrollbar {
            display: none;
        }
        .skill {
            flex: 0 0 5em;
            height: 7.5em;
            padding: 0.7em;
            background-color: #d1b3ff;
            border-radius: 30px;
            font-size: 3em;
            font-weight: 600;
            margin: 0 10px;
            align-content: flex-start;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
            .skill:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
        }
        .skill h3 {
            font-weight:500;
            font-size: 2.5vw;
            color: #2d006b;
        }
        .skill p {
            font-size: 1.1vw; 
            margin-top: 1vh; 
            text-align: start; 
            line-height: 1.3;
        }
    @@keyframes spin {
        from {translate: 0;}
        to {translate: -100%;}
    }

    .roles-section {
        color: white;
        padding: 60px 20px;
        text-align: center;
    }

        .roles-section h2 {
