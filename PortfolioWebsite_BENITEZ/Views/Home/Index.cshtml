@{
    ViewData["Title"] = "Home Page";
}

<style>

    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        background-image: url('/images/bg.png'); /* Add your background image here */
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        background-attachment: fixed; /* This makes the background image stay put for a moving effect */
        color: white;
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden; /* hides any unwanted horizontal scroll */
    }

    .container, .container-fluid {
        padding: 0 !important;
        margin: 0 !important;
        max-width: 100% !important;
    }

    /* HERO SECTION */
    .section-background {
        background-image: url('/images/hermione.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        box-sizing: border-box;
    }

    /* RESPONSIVENESS */
    @@media (max-width: 1024px) {
        .section-background
    {
        height: 80vh;
        background-position: center top;
    }

    }

    @@media (max-width: 768px) {
        .section-background
    {
        height: 70vh;
        background-position: center top;
    }

    }

    @@media (max-width: 480px) {
        .section-background
    {
        height: 60vh;
        background-position: center top;
    }

    }

    /* HOVERABLE CARD SECTION (All About Hermione) */
    .hover-section {
        background: linear-gradient(180deg, rgba(27, 0, 40, 1) 0%, rgba(50, 0, 70, 1) 100%);
        padding: 70px 30px;
        text-align: center;
    }

        .hover-section h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 40px;
            color: #fff;
        }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 25px;
    }

    .info-card {
        background: rgba(255, 255, 255, 0.1);
        width: 280px;
        border-radius: 20px;
        padding: 25px;
        color: white;
        text-align: left;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    }

        .info-card:hover {
            transform: translateY(-10px) scale(1.05);
            background: rgba(167, 95, 255, 0.3);
            box-shadow: 0 6px 20px rgba(167, 95, 255, 0.4);
        }

        .info-card h3 {
            font-size: 1.3rem;
            color: #d0aaff;
            margin-bottom: 10px;
        }

        .info-card p {
            font-size: 0.95rem;
            line-height: 1.5;
        }

    /* Responsive Cards for info-card */
    @@media (max-width: 768px) {
        .info-card
    {
        width: 90%;
    }

    }

    /* NEW SKILLS SECTION STYLES - BACKGROUND MODIFIED HERE */
    .skills-section {
        background-color: rgba(0, 0, 0, 0); /* REMOVED BACKGROUND COLOR - NOW TRANSPARENT */
        padding: 70px 30px;
        text-align: center;
    }

        .skills-section h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 50px;
            color: #fff;
        }

    .skills-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 25px;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* SKILL CARD MODIFIED FOR FROSTED EFFECT */
    .skill-card {
        background: rgba(26, 0, 51, 0.8); /* Semi-transparent background */
        backdrop-filter: blur(5px); /* Frosted glass effect */
        border: 1px solid #4b0082;
        width: 280px;
        min-height: 180px;
        border-radius: 15px;
        padding: 25px;
        color: white;
        text-align: left;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .skill-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(167, 95, 255, 0.4);
            border-color: #d0aaff;
            background: rgba(26, 0, 51, 0.9); /* Slightly more opaque on hover */
        }

        .skill-card h3 {
            font-size: 1.25rem;
            color: #fff;
            margin-bottom: 5px;
        }

    .skill-level {
        font-size: 0.9rem;
        color: #d0aaff;
        margin-bottom: 15px;
        display: block;
    }

    .skill-description {
        font-size: 0.9rem;
        color: #ccc;
        line-height: 1.4;
    }

    /* Responsive Skills Grid */
    @@media (max-width: 992px) {
        .skill-card
    {
        width: 45%;
        max-width: 350px;
    }

    }

    @@media (max-width: 768px) {
        .skills-section h2
    {
        font-size: 2rem;
    }

    .skill-card {
        width: 80%;
        max-width: 400px;
    }

    }


    /* ROLES SECTION STYLES (MODIFIED FOR NEW UI) */
    .roles-section {
        background: linear-gradient(90deg, #120022 0%, #4b0082 100%);
        color: white;
        padding: 60px 20px;
        text-align: center;
    }

        .roles-section h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 40px;
            text-align: left;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            padding: 0 10px;
        }

    .roles-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 25px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .role-item {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        overflow: hidden;
        width: 280px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

        .role-item:hover {
            transform: translateY(-10px) scale(1.03);
            background: rgba(167, 95, 255, 0.3);
            box-shadow: 0 6px 20px rgba(167, 95, 255, 0.4);
        }

    /* CSS FOR ACTUAL IMAGE INSERTION */
    .role-item-image {
        width: 100%;
        height: 200px;
        background-color: #e0f2f7;
        overflow: hidden;
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .role-item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Key for fixing image fit */
            display: block;
        }
    /* END OF IMAGE CSS */

    .role-item-details {
        padding: 20px;
        text-align: left;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
    }

        .role-item-details h3 {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: #d0aaff;
            line-height: 1.3;
        }

        .role-item-details p {
            font-size: 0.9rem;
            line-height: 1.4;
            color: #ccc;
        }

    /* Responsive Design for Roles Grid */
    @@media (max-width: 1200px) {
        .role-item
    {
        width: 250px;
    }

    }

    @@media (max-width: 992px) {
        .role-item
    {
        width: 45%;
        max-width: 350px;
    }

    .roles-grid {
        gap: 20px;
    }

    }

    @@media (max-width: 768px) {
        .roles-section h2
    {
        text-align: center;
    }

    .role-item {
        width: 80%;
        max-width: 400px;
    }

    }

    @@media (max-width: 480px) {
        .roles-section h2
    {
        font-size: 2rem;
        margin-bottom: 30px;
    }

    .role-item-image {
        height: 180px;
    }

    }

    .video-section {
        background: transparent;
        text-align: center;
        padding: 80px 20px;
    }

        .video-section h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: #d0aaff;
        }

    .video-description {
        font-size: 1rem;
        color: #ccc;
        max-width: 800px;
        margin: 0 auto 40px;
        line-height: 1.6;
    }

    .video-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .video-container video {
            width: 80%;
            max-width: 900px;
            border-radius: 20px;
            box-shadow: 0 0 30px rgba(167, 95, 255, 0.4);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .video-container video:hover {
                transform: scale(1.02);
                box-shadow: 0 0 40px rgba(208, 170, 255, 0.5);
            }

    /* Responsive Video */
    @@media (max-width: 768px) {
        .video-container video

    {
        width: 95%;
    }

    .video-section h2 {
        font-size: 2rem;
    }

    .video-description {
        font-size: 0.95rem;
    }

    }

    footer {
        margin-bottom: 0 !important;
        padding-bottom: 30px !important; /* adjust as needed */
    }

    .footer-section {
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }

    /* Remove ghost gap caused by flex or parallax sections */
    main, section:last-child {
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }

    /* NEW FOOTER STYLES */
    .footer-section {
        background-color: #120022; /* Solid dark background for contrast */
        color: white;
        padding: 40px 20px;
        text-align: center;
    }

    .footer-content {
        max-width: 1000px;
        margin: 0 auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        align-items: flex-start;
    }

    .footer-column {
        min-width: 250px;
        text-align: left;
    }

    .footer-column h3 {
        font-size: 1.3rem;
        color: #d0aaff;
        margin-bottom: 15px;
        font-weight: 600;
    }

    .footer-column p, .footer-column a {
        font-size: 0.95rem;
        color: #ccc;
        line-height: 1.6;
        margin-bottom: 8px;
        display: block;
        text-decoration: none;
    }

    .footer-column a:hover {
        color: #fff;
        text-decoration: underline;
    }

    .social-icons a {
        display: inline-block;
        margin-right: 15px;
        font-size: 1.5rem;
        color: #d0aaff;
        transition: color 0.3s;
    }

    .social-icons a:hover {
        color: #fff;
    }

    .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin-top: 30px;
        padding-top: 20px;
    }

    .footer-bottom p {
        font-size: 0.85rem;
        color: #888;
    }

    /* Responsive Footer */
    @@media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .footer-column {
            text-align: center;
            min-width: 100%;
        }

        .social-icons {
            margin-bottom: 15px;
        }
    }
</style>

