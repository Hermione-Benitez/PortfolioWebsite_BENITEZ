@{
    ViewData["Title"] = "Home Page";
}

<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
    html, body {
        background-image: url('images/bg.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow-x: hidden;
    }

    .header {
        width: 100%;
        height: 100px;
        background: linear-gradient(180deg, rgba(0,0,0,1) 0%, rgba(20,0,40,0.95) 100%);
    }

    .hover-section {
        color: #6300a5;
        padding: 40px 5% 150px;
        min-height: 80vh;
        position: relative;
        z-index: 10;
        text-align: center;
        background-color: white;
    }

    .resume-card {
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 20px;
        flex-wrap: nowrap;
    }

        .resume-card img {
            width: 40vw;
            height: auto;
            max-width: 400px;
            border-radius: 10px;
        }

    .link-container {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        width: 100%;
        margin-bottom: 30px;
    }

        .link-container img {
            width: 5vw;
            height: 100%;
            margin-right: 10px;
            border-radius: 50%;
        }

    .download-button {
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        background-color: #f0f0f0;
        border: 1px solid #d1b3ff;
        border-radius: 50px;
        margin: 10px;
        padding: 10px 20px;
        width: 150px;
        text-decoration: none;
        color: #4e04a9;
        transition: all 0.3s ease;
        display: flex;
        text-align: center;
    }

        .download-button:hover {
            transform: translateY(-5px) scale(1.03);
            background: #e9e2f5;
            box-shadow: 0 6px 20px rgba(167, 95, 255, 0.4);
        }

    .info-card {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        padding: 25px;
        color: #6300a5;
        margin: 10px;
        width: 40vw;
        max-width: 600px;
        text-align: left;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        flex-shrink: 0;
    }

        .info-card h3 {
            font-size: 1.5rem;
            color: #4e04a9;
            margin: 20px 0 10px 0;
            border-bottom: 2px solid #d1b3ff;
            padding-bottom: 5px;
        }

        .info-card p {
            font-size: 1rem;
            line-height: 1.6;
        }

    .coverletter {
        text-align: justify;
        margin: 10px 0;
        color: #333;
    }

    .footer-section {
        background-color: #0d0d0d;
        color: #aaa;
        padding: 40px 20px 20px;
        text-align: center;
    }

    .footer-content {
        display: flex;
        justify-content: space-around;
        max-width: 1200px;
        margin: 0 auto 30px;
        padding: 0 20px;
        flex-wrap: nowrap;
    }

    .footer-column {
        flex: 1;
        padding: 0 15px;
        text-align: left;
    }

        .footer-column h3 {
            color: #fff;
            margin-bottom: 15px;
            font-size: 1.1rem;
        }

        .footer-column a {
            color: #d1b3ff;
            text-decoration: none;
            transition: color 0.2s;
        }

            .footer-column a:hover {
                color: #fff;
            }

    .footer-bottom {
        border-top: 1px solid #333;
        padding-top: 20px;
        font-size: 0.85em;
        text-align: center;
    }

    .social-icons {
        display: flex;
        gap: 15px;
    }

        .social-icons a img {
            width: 100%;
            height: 35px;
            border-radius: 50%;
            margin: 0;
            transition: transform 0.2s;
        }

            .social-icons a img:hover {
                transform: scale(1.1);
            }

    @@media (max-width: 768px) {
        .hover-section

    {
        padding: 20px 10px 80px;
    }

    .resume-card {
        flex-direction: column;
        align-items: center;
    }

        .resume-card img {
            width: 90%;
            max-width: 400px;
            margin-bottom: 20px;
        }

    .info-card {
        width: 90%;
        margin: 0;
    }

    .download-button {
        width: 45%;
        margin: 5px;
        font-size: 0.9rem;
        padding: 8px 15px;
    }

    .link-container {
        justify-content: space-around;
    }

    .footer-content {
        flex-direction: column;
        gap: 30px;
        padding: 0 10px;
    }

    .footer-column {
        flex: none;
        padding: 0 0 20px 0;
        text-align: center;
    }

    .social-icons {
        justify-content: center;
    }

    }
</style>


